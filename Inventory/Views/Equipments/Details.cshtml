                <dd>@Html.DisplayFor(model => model.Equipment.Active)</dd>
                <dt>@Html.DisplayNameFor(model => model.Equipment.Registration)</dt>
                <dd>@Html.DisplayFor(model => model.Equipment.Registration)</dd>
                <dt>@Html.DisplayNameFor(model => model.Equipment.LastUpdate)</dt>
