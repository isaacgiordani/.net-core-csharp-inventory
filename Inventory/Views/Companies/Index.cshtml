@model IEnumerable<Inventory.Models.Company>

@{
    ViewData["Title"] = "Empresas";
}

<ol class="breadcrumb">
    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="active">Empresas</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> @ViewData["Title"] <span class="badge">@Model.Count().ToString()</span></div>
    <div class="panel-body">
        <p><a asp-action="Create" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Inserir</a></p>
    </div>
</div>

<table id="tabela" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
            <th>@Html.DisplayNameFor(model => model.FantasyName)</th>
            <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
            <th>@Html.DisplayNameFor(model => model.Active)</th>
            <th>@Html.DisplayNameFor(model => model.LastUpdate)</th>
            <th>Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.ActionLink(item.CompanyName, "Details", "Companies", new { id = item.CompanyId }, null)</td>
            <td>@Html.ActionLink(item.FantasyName, "Details", "Companies", new { id = item.CompanyId }, null)</td>
            <td>@Html.DisplayFor(modelItem => item.CNPJ)</td>
            <td>@Html.DisplayFor(modelItem => item.Active)</td>
            <td>@Html.DisplayFor(modelItem => item.LastUpdate)</td>
            <td><a asp-action="Delete" asp-route-id="@item.CompanyId"><span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span></a></td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
            <th>@Html.DisplayNameFor(model => model.FantasyName)</th>
            <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
            <th>@Html.DisplayNameFor(model => model.Active)</th>
            <th>@Html.DisplayNameFor(model => model.LastUpdate)</th>
            <th>Remover</th>
        </tr>
    </tfoot>
</table>