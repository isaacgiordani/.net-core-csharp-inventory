@model Inventory.Models.ViewModels.EquipmentFormViewModel

@{
    ViewData["Title"] = "Visualizando Equipamento";
}

<ol class="breadcrumb">
    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
