@model IEnumerable<Inventory.Models.Equipment>

@{
    ViewData["Title"] = "Equipamentos na garantia";
}

    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a asp-area="" asp-controller="Equipments" asp-action="Index">Equipamentos</a></li>
        <li class="active">Na garantia</li>
    </ol>

<div class="panel panel-default">
    <div class="panel-heading"><span class="glyphicon glyphicon-phone" aria-hidden="true"></span> @ViewData["Title"] <span class="badge">@Model.Count().ToString()</span></div>
    <div class="panel-body">
        <p>
            <a asp-action="Index" class="col-md-3 btn btn-default"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Voltar</a>
            <a asp-action="EquipmentsUnderWarranty" class="col-md-3 btn btn-success"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Na garantia</a>
        </p>
    </div>
</div>

<table id="tabela" class="table table-striped table-hover" style="width:100%">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Employee.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Equity)</th>
            <th>@Html.DisplayNameFor(model => model.OldEquity)</th>
            <th>@Html.DisplayNameFor(model => model.Hostname)</th>
            <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
            <th>@Html.DisplayNameFor(model => model.ServiceTag)</th>
            <th>@Html.DisplayNameFor(model => model.Warranty)</th>
            <th>@Html.DisplayNameFor(model => model.Maintenance)</th>
            <th>@Html.DisplayNameFor(model => model.Active)</th>
            <th>@Html.DisplayNameFor(model => model.LastUpdate)</th>
            <th>Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Employee.Name)*@
                    @Html.ActionLink(item.Employee.Name, "Details", "Equipments", new { id = item.EquipmentId }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OldEquity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hostname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Warranty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maintenance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdate)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.EquipmentId"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Employee.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Equity)</th>
            <th>@Html.DisplayNameFor(model => model.OldEquity)</th>
            <th>@Html.DisplayNameFor(model => model.Hostname)</th>
            <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
            <th>@Html.DisplayNameFor(model => model.ServiceTag)</th>
            <th>@Html.DisplayNameFor(model => model.Warranty)</th>
            <th>@Html.DisplayNameFor(model => model.Maintenance)</th>
            <th>@Html.DisplayNameFor(model => model.Active)</th>
            <th>@Html.DisplayNameFor(model => model.LastUpdate)</th>
            <th>Remover</th>
        </tr>
    </tfoot>
</table>