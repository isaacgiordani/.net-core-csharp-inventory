@model IEnumerable<Inventory.Models.Equipment>

@{
    ViewData["Title"] = "Equipamentos por usuário";
}

    <content id="Content1">



        <ol class="breadcrumb">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Employees" asp-action="Index">Colaboradores</a></li>
            <li class="active">Equipamentos por usuário</li>
        </ol>


        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> @ViewData["Title"] <span class="badge">@Model.Count().ToString()</span></div>
            <div class="panel-body">
                <p>
                    <a asp-action="Index" class="col-md-3 btn btn-default"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Voltar</a>
                    <a asp-action="EquipmentsByEmployee" class="col-md-3 btn btn-success"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Equipamentos por usuário</a>
                </p>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.EquipmentType.Info)</dt>
                        <dd>@Html.ActionLink(item.EquipmentType.Info, "Details", "Equipments", new { id = item.EquipmentId }, null)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Employee.Name)</dt>
                        <dd>@Html.ActionLink(item.Employee.Name, "Details", "Equipments", new { id = item.EquipmentId }, null)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Equity)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.Equity)</dd>
                        <dt>@Html.DisplayNameFor(model => model.OldEquity)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.OldEquity)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Hostname)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.Hostname)</dd>
                        <dt>@Html.DisplayNameFor(model => model.ServiceTag)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.ServiceTag)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Warranty)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.Warranty)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Maintenance)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.Maintenance)</dd>
                        <dt>@Html.DisplayNameFor(model => model.Active)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.Active)</dd>
                        <dt>@Html.DisplayNameFor(model => model.LastUpdate)</dt>
                        <dd>@Html.DisplayFor(modelItem => item.LastUpdate)</dd>
                    </dl>
                </div>
            </div>
        }

